  "author": "Harrison",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@hello-pangea/color-picker": "^3.2.2",
    "@plasmohq/storage": "^1.0.5",
    "daisyui": "^2.50.0",
    "mathjs": "^11.6.0",
    "plasmo": "0.64.5",
    "query-string": "^8.1.0",
    "react": "18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "18.2.0",
    "react-draggable": "^4.4.5",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/webextension-polyfill": "^0.10.6",
    "autoprefixer": "^10.4.13",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4"
  },
  "manifest": {
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "tabs",
